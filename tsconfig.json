{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*"   : ["src/layouts/*"],
            "@pages/*"     : ["src/pages/*"],
            "@assets/*"    : ["src/assets/*"],
            "@styles/*"    : ["src/styles/*"],
            "@js/*"        : ["src/js/*"],
            "@images/*"    : ["src/assets/images/*"],
            "@config/*"    : ["src/config/*"],
            "@content/*"   : ["src/content/*"],
            "@/*"          : ["src/*"]
        }
    }
}
